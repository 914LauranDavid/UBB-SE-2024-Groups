@model GroupsApp.Models.MarketplacePosts.MarketplacePost

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>MarketplacePost</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control" id="postType" onchange="showRelevantFields()">
                    <option value="Donation">Donation</option>
                    <option value="FixedPrice">Fixed Price</option>
                    <option value="Auction">Auction</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div id="postFields">
                <!-- Partial view will be rendered here -->
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function showRelevantFields() {
            var postType = document.getElementById("postType").value;
            var url = "/MarketplacePosts/GetFields?type=" + postType;
            $.get(url, function (data) {
                $("#postFields").html(data);
            });
        }
    </script>
}
