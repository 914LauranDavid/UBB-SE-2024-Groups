@model IEnumerable<GroupsApp.Payloads.DTO.MarketplacePostDTO>

@{
    ViewData["Title"] = "Index";
}

<h1>Your favorite posts</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td><img src="@item.MediaContent" alt="Image" style="max-width: 400px; max-height: 400px;" /></td>
                <td>
                    <a asp-action="Delete" asp-route-userId="@item.AuthorId" asp-route-postId="@item.MarketplacePostId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
